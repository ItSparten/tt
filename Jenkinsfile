pipeline {
    agent any

    stages {
        stage('Récupération du code') {
            steps {
                checkout scm
            }
        }

        stage('Lancement de la commande Maven') {
            steps {
                sh 'mvn clean compile'
            }
        }
        stage('SonarQube Scan') {
            steps {
                sh 'mvn sonar:sonar -Dsonar.login=squ_438149b4122b693f05464ca9e8872977a9413de4'
            }
        }
        
       stage('mvn deploy'){
            steps {
                sh "mvn deploy"
            }
       }
     }
  }